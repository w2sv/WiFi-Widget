<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/WiFiPropertyLayout"
    android:id="@+id/wifi_property_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/property_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:bufferType="spannable"
            android:paddingEnd="@dimen/wifi_property_label_padding_end"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/property_value_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end" />
    </LinearLayout>

    <include layout="@layout/ip_sub_property_row" />

</LinearLayout>
