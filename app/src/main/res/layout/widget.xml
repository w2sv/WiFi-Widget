<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.IPAddressWidget.AppWidgetContainer"
    style="@style/Widget.IPAddressWidget.AppWidget.Container">

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/property_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/ssid_tv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/size_text" />

            <TextView
                android:id="@+id/ipv4_tv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/size_text" />

            <TextView
                android:id="@+id/frequency_tv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/size_text" />

            <TextView
                android:id="@+id/gateway_tv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/size_text" />

            <TextView
                android:id="@+id/subnet_mask_tv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/size_text" />

            <TextView
                android:id="@+id/dns_tv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/size_text" />

            <TextView
                android:id="@+id/dhcp_tv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="@dimen/size_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/no_wifi_connection_tv"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:text="@string/no_wifi_connection"
            android:textSize="@dimen/size_text"
            android:textStyle="italic" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/refresh_button"

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/content_layout"
        android:layout_marginBottom="-35dp"

        android:background="@drawable/ic_round_refresh_24"
        android:contentDescription="@string/refresh_data" />

    <TextView
        android:id="@+id/last_updated_tv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/content_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-23dp"

        android:text="@string/updated"
        android:textSize="12sp"
        android:textStyle="italic" />

</RelativeLayout>