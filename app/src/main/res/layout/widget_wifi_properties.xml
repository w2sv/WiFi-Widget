            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/frequency_value_tv"
            style="@style/Widget.Wifi.Property.Value"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gateway_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
